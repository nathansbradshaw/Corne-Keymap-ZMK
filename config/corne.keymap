#include <behaviors.dtsi>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/bt.h>
#include <dt-bindings/zmk/ext_power.h>

/ {
        ext-power {
                init-delay-ms = <90>;
        };
        keymap {
                compatible = "zmk,keymap";

                default_layer {
// -----------------------------------------------------------------------------------------
// |  TAB |  Q  |  W  |  E  |  R  |  T  | ¤ |  Y  |  U   |  I  |  O  |  P  |  =  |
// | CTRL |  A  |  S  |  D  |  F  |  G  | ¤ |  H  |  J   |  K  |  L  |  ;  |  '  |
// | SHFT |  Z  |  X  |  C  |  V  |  B  | ¤ |  N  |  M   |  ,  |  .  |  /  | ESC/RS |
//                    | GUI | LWR | SPC | ¤ | ENT/RS | RSE  | BKSP |
                        bindings = <
   &kp TAB   &kp Q &kp W &kp E &kp R &kp T   &kp Y &kp U  &kp I     &kp O   &kp P    &kp EQUAL
   &kp LCTRL &kp A &kp S &kp D &kp F &kp G   &kp H &kp J  &kp K     &kp L   &kp SEMI &kp SQT
   &kp LSHFT &kp Z &kp X &kp C &kp V &kp B   &kp N &kp M  &kp COMMA &kp DOT &kp FSLH &mt RSHFT ESC
                  &kp LGUI &mo 1 &kp SPACE   &mt RSHFT RET &mo 2 &kp BSPC
                        >;
                };
                lower_layer {
// -----------------------------------------------------------------------------------------
// |  TAB |  1  |  2  |  3  |  4  |  5  | ¤ |  6  |  7  |  8  |  9  |  0  | ~   |
// | CTRL |  !  |  @  |  #  |  $  |  %  | ¤ |  ^  |  &  |  *  |  (  |  )  |  -  |
// | SHFT |     |     |     |  =  |     | ¤ |  {  |  }  |  <  |  >  |  \  |  RALT   |
//                    | GUI |     | SPC | ¤ | ENT/RS |  Mo3   | BKSP |
                        bindings = <
   &kp TAB    &kp N1       &kp N2       &kp N3       &kp N4       &kp N5         &kp N6      &kp N7     &kp N8        &kp N9     &kp N0    &kp GRAVE
   &kp LCTRL  &kp EXCL     &kp AT       &kp HASH    &kp DLLR     &kp PRCNT      &kp CARET   &kp AMPS   &kp ASTRK     &kp LPAR   &kp RPAR  &kp MINUS
   &kp LSHFT  &trans       &trans       &trans       &kp EQUAL       &trans      &kp LBKT    &kp RBKT   &kp LT        &kp GT     &kp BSLH   &kp RALT
                          	        &kp LGUI     &trans       &kp SPACE      &kp RET     &mo 3     &kp RALT
                        >;
                };

                raise_layer {
// -----------------------------------------------------------------------------------------
// |  TAB | DEL | HME | UP  | END | PGU |   |  F7 |  F8  |  F9  |  F10 |  F11 | F12 |
// | CTRL | ESC | LFT | DWN | RGT | PGD |   |  F1 |  F2  |  F3  |  F4  |  F5  |  F6 |
// | SHFT |prscn|     |     |     |     |   |     |      |      |      |      |  ALT   |
//                    | GUI | MO3 | SPC | ¤ | ENT/RS |   | BKSP |
                        bindings = <
   &kp TAB  &kp DEL   &kp HOME &kp UP   &kp END   &kp PG_UP  &kp F7    &kp F8    &kp F9          &kp F10   &kp F11   &kp F12
   &kp LCTRL &kp ESC   &kp LEFT &kp DOWN &kp RIGHT &kp PG_DN &kp F1    &kp F2    &kp F3          &kp F4    &kp F5    &kp F6
   &kp LSHFT &kp PSCRN &trans   &trans   &trans    &trans    &trans    &trans   &trans           &trans    &trans    &kp RALT
                          	        &kp LGUI     &mo 3      &kp SPACE      &kp RET     &trans     &kp RALT
                        >;
                };

                adjust_layer {
// -----------------------------------------------------------------------------------------
// | BTCLR| BT1 | BT2 | BT3 | BT4 | BT5 |   | LFT | DWN |  UP | RGT |     |      |
// |      |     |     |     |     |     |   |     |     |     |     |     |      |
// |      |     |     |     |     |     |   |     |     |     |     |     |      |
//                    | GUI |     | SPC |   | ENT |     | ALT |
                        bindings = <
   &bt BT_CLR &bt BT_SEL 0 &bt BT_SEL 1 &bt BT_SEL 2 &bt BT_SEL 3 &bt BT_SEL 4   &trans &trans &trans &trans &trans &trans
   &kp LCTRL &trans &trans   &trans   &trans    &trans    &trans    &trans   &trans           &trans    &trans    &trans
   &ext_power EP_ON &trans &trans   &trans   &trans    &trans    &trans    &trans   &trans           &trans    &trans    &ext_power EP_OFF
                    	     &kp LGUI &trans    &kp SPACE   &kp RET   &trans   &kp RALT
                        >;
                };
        };

};